{{!< default}}

	<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
		
		<h2 class="blog-description">{{@blog.description}}</h2>
		
	</header>

<main  role="main">
    
    
    <div class="ads">
    
    
    
    <!-- AsyncWriterTop -->
<ins class="adsbygoogle"
     style="display:block"
     data-ad-client="ca-pub-1195309242567386"
     data-ad-slot="5021306400"
     data-ad-format="auto"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
        
        </div>

    {{#foreach posts}}

    <article class="preview">
        <header>
			{{#if image}}
				<a href="{{url}}" class="imgLink"><img src="{{image}}" class="articleImage"></a>
			{{/if}}
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>
            <p class="readmore"><a href="{{url}}">Read this article <i class="fa fa-chevron-circle-right"></i></a></p>
        </section>
    </article>

    {{/foreach}}
        

    {{pagination}}

</main>

